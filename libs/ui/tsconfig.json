{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../dist/libs/ui",
        "rootDir": "./src",
        "composite": true,
        "target": "ES6",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["lib/ui/src/*"]
        }
    },
    "include": ["src/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
