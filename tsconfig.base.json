{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["lib/*/src"]
        }
    },
    "exclude": ["node_modules", "dist"]
}